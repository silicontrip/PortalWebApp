<?xml version="1.0" ?>
<project name="AntWarFileExample" default="war">
 
    <path id="compile.classpath">
        <fileset dir="WEB-INF/lib"> <include name="*.jar"/> </fileset>
        <fileset dir="/Users/mheath/glassfish7/glassfish/lib"> <include name="*.jar"/> </fileset>
    </path>
     
    <target name="init">
        <mkdir dir="build/classes"/>
        <mkdir dir="dist" />
    </target>
     
    <target name="compile" depends="init" >
        <javac destdir="build/classes" debug="true" srcdir="src" >
            <classpath refid="compile.classpath"/>
        </javac>
	<copy todir="build/classes">
		<fileset dir="WEB-INF/classes" includes="**/*.xml" />
	</copy>
    </target>
     
    <target name="war" depends="compile">
        <war destfile="dist/portalApi.war" webxml="WEB-INF/web.xml">
            <fileset dir="WebContent"/>
            <metainf dir="build/classes/META-INF"/>
            <lib dir="WEB-INF/lib"/>
            <classes dir="build/classes"/>
        </war>
    </target>
     
    <target name="clean">
        <delete dir="dist" />
        <delete dir="build" />
    </target>
     
</project>
